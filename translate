#!/usr/bin/env python3

"""
Google Translator cmd client.

This will translate arbitary strings in any language using
google translator. (By parsing HTML)"""

from bs4 import BeautifulSoup
from selenium import webdriver

driver = webdriver.PhantomJS()
driver.get('https://translate.google.com/#auto/de/this%20is%20just%20a%20nice%20test')

soup = BeautifulSoup(driver.page_source, 'html.parser')
print(soup.find(id='result_box'))